{
	"$schema": "https://json.schemastore.org/claude-code-settings.json",
	"permissions": {
		"allow": [
			"Bash(git status:*)",
			"Bash(git diff:*)",
			"Bash(git log:*)",
			"Bash(git branch:*)",
			"Bash(git show:*)"
		],
		"deny": []
	},
	"statusLine": {
		"type": "command",
		"command": "${XDG_CONFIG_HOME:-$HOME/.config}/claude/statusline.sh",
		"padding": 0
	}
}
