#!/usr/bin/env bash
set -euo pipefail

# Get staged .nix files
staged_nix_files=$(git diff --cached --name-only --diff-filter=ACM | grep '\.nix$' || true)

if [[ -z "$staged_nix_files" ]]; then
  exit 0
fi

echo "Checking Nix formatting..."

# Check if nixfmt is available
if ! command -v nixfmt &> /dev/null; then
  echo "nixfmt not found, skipping format check"
  exit 0
fi

# Run nixfmt in check mode on staged files
if ! echo "$staged_nix_files" | xargs nixfmt --check 2>/dev/null; then
  echo ""
  echo "Nix files need formatting. Run:"
  echo "  nixfmt \$files"
  echo ""
  exit 1
fi

echo "Nix formatting OK"
