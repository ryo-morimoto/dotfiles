#!/usr/bin/env bash
set -euo pipefail

# Get staged .nix files
staged_nix_files=$(git diff --cached --name-only --diff-filter=ACM | grep '\.nix$' || true)

if [[ -z "$staged_nix_files" ]]; then
  exit 0
fi

echo "Checking Nix formatting..."

# Check if nixfmt-tree is available
if ! command -v nixfmt-tree &> /dev/null; then
  echo "nixfmt-tree not found, skipping format check"
  exit 0
fi

# Run nixfmt-tree in check mode
if ! nixfmt-tree --check 2>/dev/null; then
  echo ""
  echo "Nix files need formatting. Run:"
  echo "  nixfmt-tree"
  echo ""
  exit 1
fi

echo "Nix formatting OK"
